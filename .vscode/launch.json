{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dm-tools.mjs",
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--watch"],
      "skipFiles": [
